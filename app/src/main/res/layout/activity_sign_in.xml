<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".screen.signin.SignInActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <TextView
        android:id="@+id/tv_signin_tab_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/spoqahansansbold"
        android:lineSpacingExtra="6sp"
        android:text="로그인"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@+id/gl_start"
        app:layout_constraintRight_toRightOf="@+id/gl_end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/tv_signin_tab_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/spoqahansansbold"
        android:lineSpacingExtra="6sp"
        android:text="회원가입"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/tv_signin_tab_signin"
        app:layout_constraintRight_toRightOf="@+id/gl_end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />


    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:backgroundTint="#959dad"
        android:fontFamily="@font/spoqahansansregular"
        android:hint="아이디"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:lineSpacingExtra="20sp"
        android:maxLines="1"
        android:paddingTop="10dp"
        android:paddingBottom="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="#959dad"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/gl_start"
        app:layout_constraintRight_toRightOf="@+id/gl_end"
        app:layout_constraintTop_toBottomOf="@+id/tv_signin_tab_signup"
        app:layout_constraintVertical_bias="0" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:backgroundTint="#959dad"
        android:fontFamily="@font/spoqahansansregular"
        android:hint="비밀번호"
        android:importantForAutofill="no"
        android:lineSpacingExtra="20sp"
        android:maxLines="1"
        android:paddingTop="10dp"
        android:paddingBottom="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="#959dad"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/gl_start"
        app:layout_constraintRight_toRightOf="@+id/gl_end"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/white"
        android:fontFamily="@font/spoqahansanslight"
        android:lineSpacingExtra="24sp"
        android:text="로그인"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@+id/gl_start"
        app:layout_constraintRight_toRightOf="@+id/gl_end"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        app:layout_constraintVertical_bias="0" />

    <FrameLayout
        android:id="@+id/fl_signup_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="186dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo_idol_kingdom" />

</androidx.constraintlayout.widget.ConstraintLayout>