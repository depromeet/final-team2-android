<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/profile_setting_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="46sp"
        android:layout_marginEnd="18.5dp"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/spoqahansansregular"
        android:maxLines="1"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="이홍유진" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/profile_setting_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/spoqahansansregular"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/profile_setting_name"
        app:layout_constraintStart_toStartOf="@id/profile_setting_name"
        app:layout_constraintTop_toBottomOf="@id/profile_setting_name"
        tools:text="이홍유진" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/profile_setting_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/spoqahansansregular"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/profile_setting_name"
        app:layout_constraintStart_toStartOf="@id/profile_setting_name"
        app:layout_constraintTop_toBottomOf="@id/profile_setting_password"
        tools:text="이홍유진" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/profile_setting_school"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/spoqahansansregular"
        android:maxLines="1"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/profile_setting_name"
        app:layout_constraintStart_toStartOf="@id/profile_setting_name"
        app:layout_constraintTop_toBottomOf="@id/profile_setting_email"
        tools:text="풍동고등학교" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profile_setting_apply"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginTop="24.5dp"
        android:background="@drawable/ripple_edit_completed"
        android:fontFamily="@font/spoqahansanslight"
        android:text="@string/str_edit_completed"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/profile_setting_name"
        app:layout_constraintTop_toBottomOf="@id/profile_setting_school" />

</androidx.constraintlayout.widget.ConstraintLayout>